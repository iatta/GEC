@model IEnumerable<List<GEC.Attendance.Authorization.Users.Dto.FingerReportOutput>>
@{
    Layout = null;
}

<!DOCTYPE html>

<html dir="rtl">
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js" integrity="sha384-1CmrxMRARb6aLqgBO7yyAxTOQE2AKb9GfXnEo760AUcUmFx3ibVJJAzGytlQcNXd" crossorigin="anonymous"></script>
    <title>تقرير البصمات</title>

    <style>
        .page-break {
            page-break-before: always;
        }

        table {
            page-break-inside: auto
        }

        tr {
            page-break-inside: avoid;
            page-break-after: auto
        }

        .table td {
            text-align: center;
        }
    </style>
</head>
<body>
    @foreach (var userList in Model)
    {
        <table class="table">
            <tbody>
                <tr>
                    <td style="text-align:right;font-size:20px;font-weight:bold">
                        الإسم :  @userList[0].UserName
                    </td>
                </tr>
            </tbody>
        </table>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th class="text-center">
                        التاريخ
                    </th>
                    <th class="text-center">
                        اليوم
                    </th>
                    <th class="text-center">
                        البصمة الأولى
                    </th>
                    <th class="text-center">
                        البصمة الثانيه
                    </th>
                    <th class="text-center">
                        البصمة الثالثة
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in userList)
                {
                    <tr>
                        <td>
                            @item.CreationTime.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("ar-AE"))
                        </td>
                        <td>
                            @item.CreationTime.ToString("dddd", new System.Globalization.CultureInfo("ar-AE"))
                        </td>
                        <td>
                            @item.Scan1
                        </td>
                        <td>
                            @item.Scan2
                        </td>
                        <td>
                            @item.Scan3
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <div class="page-break"></div>
    }
</body>
</html>
